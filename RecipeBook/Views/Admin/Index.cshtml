@{
  Layout = "_Layout";
}

@using Microsoft.AspNetCore.Identity;
@using RecipeBook.ViewModels;
@model List<RecipeBook.ViewModels.UserRolesViewModel>;

<h5>Manage Users</h5>
@Html.ActionLink("Add a Role", "Create", "Roles") | 
@Html.ActionLink("Manage Roles", "Index", "Roles") |
@Html.ActionLink("Manage Users", "Index", "Admin")
<hr/>

<div class="container">
  @if(Model.Count == 0)
  {
    <p>There are currently no users in the system.</p>
  }
  else
  {
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Id</th>
          <th>UserName</th>
          <th>Roles</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach(UserRolesViewModel user in Model)
        {
          <tr>
            <td>@user.UserId</td>
            <td>@user.UserName</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = user.UserId })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = user.UserId })</td>
          </tr>
        }
      </tbody>
    </table>
  }
</div>